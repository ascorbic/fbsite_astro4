---
const {value} = Astro.props;
const integer = Math.floor(value);
const areDecimals = value !== integer;
const stars = new Array(integer).fill(null);
---


  {
    stars.map(star => {
      return <i class="fa fa-star fa-2x text-yellow-200"></i>
    })
  }
  {
    areDecimals && <i class="fa fa-star-half-o  fa-2x text-yellow-200"></i>
  }
