---
interface Props { 
  size: 'sm' | 'md' | 'lg' | 'xl'
  primary?: boolean;
  secondary?: boolean;
  hideOnMobile?: boolean;
}

const { size = 'sm', primary, secondary, accent, hideOnMobile } = Astro.props;

---

<div class:list={
  ['', {
    'my-4': size === 'sm',
    'my-8': size === 'md',
    'my-16': size === 'lg',
    'my-24': size === 'xl',
  }]
} />
