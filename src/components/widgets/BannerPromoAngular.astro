  <div class="mockup-code !rounded-b-none " style="background-color: #0d1117"></div>
  <div  style="background-color: #0d1117">
    <div class="px-5">
      <slot />
    </div>
  </div>
  <div class="p-4 rounded-b-2xl  shadow-slate-900 shadow-md "  style="background-color: #0d1117"></div>
</div> -->

<div class="relative border-2 border-slate-700 rounded-2xl mt-4 mb-12">
  {
    (hasHeaderContent) && 
      <div class="flex items-center gap-1 px-3 py-2">

        { 
          techs?.length && 
          techs.map(tech => {
            return <Image src={TECHS[tech].img} quality={80} alt={title} width={24} aspectRatio={1} />
          })
        }

        { title && <div class="ml-2 " set:html={title}></div>}

      </div>
  }
  <div class:list={['px-3 lg:px-5 py-6 rounded-b-xl', {'rounded-t-xl': !hasHeaderContent}]} style="background-color: #0d1117">
    <a href={href} class="flex justify-center">
      <Image
        class="rounded-sm sm:rounded-2xl"
        src={'/images/banners/banner1.png'}
        quality={80} alt="Nuovo Corso"
        width={1014/2} height={1164/2} />
    </a>
  </div>
</div>
