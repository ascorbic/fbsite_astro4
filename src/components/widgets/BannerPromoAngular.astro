---
import { Image } from 'astro:assets';
const {
  title = 'ADS: MY LATEST VIDEO COURSE <br />(italian only)',
  techs = ['angular', 'ts'],
  href="/video-courses/angular-reactive-forms",
  w = undefined,
  quality: number
} = Astro.props

const TECHS = {
  'js': { img: import('../../images/icons/techs/js.png'), longName: 'JavaScript' },
  'ts': { img: import('../../images/icons/techs/ts.png'), longName: 'TypeScript' },
  'angular': { img: import('../../images/icons/techs/angular.png'), longName: 'Angular' },
  'react': { img: import('../../images/icons/techs/react.png'), longName: 'React' },
  'html': { img: import('../../images/icons/techs/html.png'), longName: 'HTML' },
  'css': { img: import('../../images/icons/techs/css.png'), longName: 'CSS' },
}

const hasHeaderContent = title || techs;


---

