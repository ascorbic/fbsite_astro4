---
interface Props {
  size?: "xs" | "sm" | "md" | "lg" ;
}

const { size = 'md' } = Astro.props;

---


<kbd class:list={['kbd mx-1 ', {
  'kbd-xs': size === 'xs',
  'kbd-sm': size === 'sm',
  'kbd-md': size === 'md',
  'kbd-lg': size === 'lg',
}]}>
  <slot />  
</kbd>

<style is:global>
  .dark .kbd {
    @apply bg-slate-900 text-white;
  }
</style>
