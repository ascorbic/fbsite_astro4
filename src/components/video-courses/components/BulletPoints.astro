---
import * as W from '@widgets'

const { frontmatter, video, vimeo, image, items, text, textTitle, right, badge } = Astro.props;
---

<div class="flex flex-col 2xl:flex-row items-center gap-4 px-3 sm:px-24 mb-12">
  <div class:list={['w-full 2xl:w-1/2 order-last 2xl:order-none ', {'': right}]}>
    {video && <W.IFrame vimeo={vimeo} src={video} />}
    {image && <W.Img isWindowed={false} src={image} w={600} quality={60} border/>}

  </div>



  <div class:list={['px-3 2xl:p-0 w-full 2xl:w-1/2', {' order-first': right}]}>
    {
      items?.map(item => {
        return (
          <div class="mb-6 flex gap-4 ">
            <div class="">
              <div class={`rounded-full c-${frontmatter.css} w-8 h-8 flex justify-center items-center`}>{item.id}</div>
            </div>
            <div>
              <div class="text-xl xl:text-3xl font-bold" >{item.t}</div>
              <div class="text-md xl:text-xl 3xl:text-2xl">{item.d}</div>
            </div>
          </div>
        )
      })
    }

    <div class="px-0 xl:px-12">
      <div>
        <slot />
      </div>
      
      {
      badge && <span class="px-2 py-1 bg-slate-300 dark:bg-slate-900 rounded-xl mb-2 inline-block text-sm font-bold">
        {badge}
      </span>
      }
      <div set:html={textTitle} class="text-2xl 3xl:text-4xl font-bold mb-3"></div>
      <div set:html={text}  class="text-xl 3xl:text-2xl"></div>
    </div>
  </div>
</div>
