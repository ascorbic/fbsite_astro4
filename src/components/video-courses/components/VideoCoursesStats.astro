---
const { frontmatter  } = Astro.props;

---

<div class="flex  justify-center my-16">
  <div class="flex flex-col md:flex-row w-full justify-center gap-16 bg-slate-900 p-8 rounded-3xl">
    {
      frontmatter?.stats.map((stat) => {
        return (
        <div class="text-center text-white">
          <div class="text-6xl">
            {stat.v} <span class="text-3xl">{stat.unit}</span>
          </div>
          <div class="text-xl">{stat.text}</div>
        </div>
        )
      })
    }
   
  </div>
</div>