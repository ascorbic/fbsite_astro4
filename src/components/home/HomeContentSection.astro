---
import { PlayListPlayerItem } from "src/api/youtube-playlist";

const {videos, articles, blog, imgPost1, imgPost2 } = Astro.props;

import { Image, Picture } from 'astro:assets';


---
<!-- <div class="bg-gradient-to-b from-slate-800 to-slate-600 h-24  "></div> -->

  <div class="bg-slate-600 py-32">
 

    <div class="text-3xl sm:text-4xl text-center mb-16 text-white">Latest Articles</div>

    <div class="page flex gap-8 flex-col lg:flex-row mb-16">

      <div class="lg:w-2/3 w-full">
        <div class="flex flex-col h-full gap-3">
          <div class="bg-slate-800 h-1/2 rounded-xl p-3 sm:p-0 flex items-center">
            <div class="flex gap-3 items-center">
              <Image 
                class="h-full object-cover object-center  overflow-hidden rounded-t-xl border-b-slate-800 "
                src={imgPost1} 
                alt={blog[0].frontmatter.image.alt} 
                height={180}
                aspectRatio={1}
                fit="inside"
                quality={90}
              />
              <div>
                <div class="text-lg md:text-2xl text-white">{blog[0].frontmatter.title} </div>
                <div class="hidden sm:block text-white">{blog[0].frontmatter.description}</div>
                <a href={blog[0].url} class="mt-3 inline-block">
                  <button class="button-white">Read Article</button>
                </a>
              </div>

            </div>
          </div> 

          <div class="bg-slate-800 h-1/2 rounded-xl p-3 flex items-center">
            <div class="flex gap-3 items-center">
              <Image 
                class="h-full object-cover object-center  overflow-hidden rounded-t-xl border-b-slate-800 "
                src={imgPost2} 
                alt={blog[1].frontmatter.image.alt} 
                height={180}
                aspectRatio={1}
                fit="contain"
                quality={90}
              />
              <div>
                <div class="text-lg md:text-2xl text-white">{blog[1].frontmatter.title} </div>
                <div class="hidden sm:block text-white">{blog[1].frontmatter.description}</div>

                <a href={blog[1].url} class="mt-3 inline-block">
                  <button class="button-white">Read Article</button>
                </a>
              </div>

            </div>
          </div> 
        </div>
        <!--
        <div class="grid grid-rows-2 grid-flow-col gap-8 h-full">
          {
            videos.items.map((item: PlayListPlayerItem) => {
              return (
              <div class="bg-white dark:bg-slate-700 rounded-3xl p-3 w-full flex justify-center items-center">
                <div>
                  <img src={item.imageSmall} alt={item.text} class="w-full rounded-xl "/>
                </div>
              </div>
              )
            }) 
          }
        </div>
        -->
      </div> 


      <div class="lg:w-1/3 w-full  mr-3">
        <ul class="bg-white text-slate-900 dark:text-white dark:bg-slate-900  w-full rounded-box overflow-hidden">
          <li class="p-4 text-center text-3xl"><span class="text-sm"> from</span> Dev.To Profile</li>
          {
            articles.map((article: any) => {
              return  <a href={article.url} target="_blank" class="text-white no-underline">
                   <li class="p-3 cursor-pointer hover:border-l-2 hover:border-sky-300 transition  duration-300">
                {article.title}
              </li>
            </a>
            })
          }

        </ul>
      </div>
      
    </div>
  </div>  
